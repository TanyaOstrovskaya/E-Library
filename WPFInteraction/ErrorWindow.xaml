<Window x:Class="WPFInteraction.Error"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFInteraction"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Error" SizeToContent="Height" Width="300" d:DesignHeight="96.562" >
    <Grid Margin="5 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />            
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>

        <Label Grid.Row="1" x:Name="ISBN" HorizontalAlignment="Center" Content="Значение введено неверно" />       

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="okButton" IsDefault="True" Content="ОК" Click="okButton_Click"/>           
        </StackPanel>         
    </Grid>
</Window>
